{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1>ICI DOCUMENTATION</h1>
    {% if not app.user %}
        <a href="{{ path('app_login') }}">LOGIN</a>
    {% else %}
        <a href="{{ path('app_logout') }}">LOGOUT</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin') }}">ADMIN</a>
    {% endif %}
{% endblock %}
